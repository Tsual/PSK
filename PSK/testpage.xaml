        <Grid Grid.Column="1"
              Visibility="Collapsed">
            <GridView ItemsSource="{x:Bind _itemCollection}"
                      SelectionMode="None"
                      IsItemClickEnabled="False">
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="local:testpage_itemModel">
                        <Grid>
                            <TextBlock FontSize="35" Text="{x:Bind Str}"/>
                            <Button Content="t" Margin="50,0,0,0"/>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </Grid>
        <Grid Grid.Column="1"
              Visibility="Collapsed">
            <cctrl:PullToRefreshListView x:Name="_ptrlv"
                                         ItemsSource="{x:Bind _itemCollection}"
                                         OverscrollLimit="0.2"
                                         PullThreshold="200"
                                         IsPullToRefreshWithMouseEnabled="True"
                                         RefreshRequested="_ptrlv_RefreshRequested"
                                         PullProgressChanged="_ptrlv_PullProgressChanged"
                                         RefreshIntentCanceled="_ptrlv_RefreshIntentCanceled">
                <cctrl:PullToRefreshListView.ItemTemplate>
                    <DataTemplate x:DataType="local:testpage_itemModel">
                        <Grid>
                            <TextBlock FontSize="35" Text="{x:Bind Str}"/>
                        </Grid>
                    </DataTemplate>
                </cctrl:PullToRefreshListView.ItemTemplate>
                <cctrl:PullToRefreshListView.RefreshIndicatorContent>
                    <Grid>
                        <TextBlock x:Name="_RefreshIndicatorContent"/>
                    </Grid>
                </cctrl:PullToRefreshListView.RefreshIndicatorContent>
                
            </cctrl:PullToRefreshListView>
        </Grid>

    </Grid>
</Page>
